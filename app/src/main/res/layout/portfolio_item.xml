<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:id="@+id/portfolioStrip"
   >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="8">

        <TextView
            android:id="@+id/symbolText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/companyName"
            tools:text="NIB"
            style="@style/portfolioStockDisplay"
            />

        <TextView
            android:id="@+id/portfolioShareType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Bonus"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:gravity="right"
        >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/arrowViewPortfolio"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:layout_marginTop="-2dp"
               />
           <TextView
               android:id="@+id/pText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="14sp"
               tools:text="234"
               style="@style/portfolioStockDisplay"/>
       </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/totalDiff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="-10"/>
            <TextView
                android:id="@+id/percentChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:textSize="12sp"
                tools:text="05%"/>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/buyPriceText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="right"
        tools:text="800"
        style="@style/portfolioStockDisplay"/>

    <TextView
        android:id="@+id/quantityText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="right"
        tools:text="250"
        style="@style/portfolioStockDisplay"/>


    <TextView
        android:id="@+id/netGainText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="15"
        tools:text="+234"
        style="@style/portfolioStockDisplay"/>
</LinearLayout>